<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="ui.display.perspective.Perspective"
            icon="icons/PESTTMuTest.gif"
            id="PESTTMuTest.Perspective"
            name="PESTTMuTest">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="PESTTMuTest.Category"
            name="PESTTMuTest">
      </category>
      <view
            allowMultiple="true"
            category="PESTTMuTest.Category"
            class="ui.display.views.ViewMutationOperators"
            icon="icons/tree_mode.gif"
            id="PESTTMuTest.MutationOperators"
            name="Mutation Operators"
            restorable="true">
      </view>
      <view
            allowMultiple="true"
            category="PESTTMuTest.Category"
            class="ui.display.views.ViewMutants"
            id="PESTTMuTest.Mutants"
            name="Mutants"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            description="Commands related to the PESTTMuTest ViewMutationOperators."
            id="PESTTMuTest.CategoryViewMutationOpr"
            name="PESTTMuTest.ViewMutationOperators">
      </category>
      <command
            categoryId="PESTTMuTest.CategoryViewMutationOpr"
            description="Refresh"
            id="PESTTMuTest.Refresh"
            name="Refresh">
      </command>
      <command
            categoryId="PESTTMuTest.CategoryViewMutationOpr"
            description="Run the mutation operators selected"
            id="PESTTMuTest.RunMutationOperators"
            name="RunMutationOperators">
      </command>
      <command
            categoryId="PESTTMuTest.CategoryViewMutationOpr"
            description="Select All Mutation Operators"
            id="PESTTMuTest.SelectAllMutationOperators"
            name="Select All Mutation Operators">
      </command>
      <command
            categoryId="PESTTMuTest.CategoryViewMutationOpr"
            description="Deselect  All Mutation Operators"
            id="PESTTMuTest.DeselectAllMutationOperators"
            name="Deselect All Mutation Operators">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:PESTTMuTest.MutationOperators">
         <command
               commandId="PESTTMuTest.RunMutationOperators"
               icon="icons/RunAs.gif"
               label="Run the Mutation Operators selected"
               style="push"
               tooltip="Run Mutation Operators">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activeWorkbenchWindow.activePerspective">
                  <equals
                        value="PESTTMuTest.Perspective">
                  </equals>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="PESTTMuTest.SelectAllMutationOperators"
               icon="icons/select_all.gif"
               label="Select All Mutation Operators"
               style="push"
               tooltip="Select All Mutation Operators">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activeWorkbenchWindow.activePerspective">
                  <equals
                        value="PESTTMuTest.Perspective">
                  </equals>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="PESTTMuTest.DeselectAllMutationOperators"
               icon="icons/deselect_all.gif"
               label="Deselect All Mutation Operators"
               style="push"
               tooltip="Deselect All Mutation Operators">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activeWorkbenchWindow.activePerspective">
                  <equals
                        value="PESTTMuTest.Perspective">
                  </equals>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="PESTTMuTest.Refresh"
               icon="icons/refresh.gif"
               label="Refresh"
               style="push"
               tooltip="Refresh">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activeWorkbenchWindow.activePerspective">
                  <equals
                        value="PESTTMuTest.Perspective">
                  </equals>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="ui.handler.RefreshHandler"
            commandId="PESTTMuTest.Refresh">
      </handler>
      <handler
            class="ui.handler.RunMutationOperatorsHandler"
            commandId="PESTTMuTest.RunMutationOperators">
      </handler>
      <handler
            class="ui.handler.SelectAllMutationOperatorsHandler"
            commandId="PESTTMuTest.SelectAllMutationOperators">
      </handler>
      <handler
            class="ui.handler.DeselectAllMutationOperatorsHandler"
            commandId="PESTTMuTest.DeselectAllMutationOperators">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="PESTTMuTest.Perspective">
         <view
               closeable="true"
               id="PESTTMuTest.MutationOperators"
               minimized="false"
               moveable="true"
               relationship="right"
               showTitle="true"
               standalone="false"
               visible="true">
         </view>
         <view
               closeable="true"
               id="PESTTMuTest.Mutants"
               minimized="false"
               moveable="true"
               relationship="bottom"
               showTitle="true"
               standalone="false"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>


</plugin>
